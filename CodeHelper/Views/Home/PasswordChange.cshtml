
@{
    ViewBag.Title = "PasswordChange";
    Layout = "~/Views/Shared/_Generallayout.cshtml";
}

<div class="row">
    <div class="col-sm-7 mx-auto mt-5 pt-5">
        <h2 class="mt-5">Change Password...</h2>
        <form method="post">
            <div class="row">
                <div class="col-sm-6 mx-auto mt-1">
                    <div class="form-group">
                        <label class="add-course-label">Enter Old Password</label>
                        <input type="password" class="form-control" placeholder="Old Password" name="opassword" id="opassword" />

                    </div>

                    <div class="form-group">
                        <label class="add-course-label">Enter New Password</label>
                        <input type="password" class="form-control" placeholder="New Password" name="npassword" id="npassword" />

                    </div>
                    <div class="form-group">
                        <label class="add-course-label">Confirm Password</label>
                        <input type="password" class="form-control" placeholder="Confirm Password" name="cpassword" id="cpassword" />

                    </div>
                    <input type="submit" value="Change Password" id="btn" class="btn btn-info mt-1 text-light">

                </div>
            </div>

        </form>
    </div>
</div>