
@{
    ViewBag.Title = "CourseCotegaryManagement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .mt {
        margin-top: 45px !important;
        padding-top: 45px !important;
    }
</style>

<div class="header-two-title text-center mt" data-aos="fade-up">
    <p class="tagline">News & Events</p>
    <h2>Add  Add Cotegary</h2>
</div>

<div class="col-xl-12 col-lg-11 col-md-12 mx-auto">
    <div class="row">
        <div class="col-md-12">
            <div class="settings-widget">
                <div class="settings-inner-blk p-0">
                   
                    <div class="comman-space pb-0">
                        <div class="settings-tickets-blk course-instruct-blk table-responsive">

                            <table class="table table-nowrap mb-0 table-bordered text-center" id="myTable">
                                <thead>
                                    <tr>
                                        <th>SR</th>
                                        <th>CATEGORY NAME</th>
                                        <th>ICON</th>
                                        <th>Status</th>
                                        <th>ACTION</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.Rows.Count > 0)
                                        {
                                            int i = 1;
                                            foreach (System.Data.DataRow row in Model.Rows)
                                            {
                                            <tr>
                                                <td>@i</td>
                                                <td>@row["cname"]</td>
                                                <td><img src="~/Content/picture/@row["cpic"]" height="70px" width="70px"/></td>
                                                <td>@row["status"]</td>
                                                <td><a href="/admin/CourseCotegaryManagement?id=@row["id"]" onclick="return confirm('Do you want to delete')"><button class="btn btn-danger fa fa-trash" title="Delete"></button></a>
                                                  <a href="/admin/UpdateCotegary?id=@row["id"]">  <button class="btn btn-success fa fa-pencil" title="Update"></button></a>
                                                <a href="/admin/CourseCotegaryManagement?cid=@row["id"]" onclick="return confirm('Do you want to Update Status')"> <button class="btn btn-primary fa fa-ban" title="Change Status"></button></a>
                                         </td>
                                            </tr>
                                            { i = i + 1;}
                                            }
                                        }
                                    }
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Content/assets/js/jquery-3.6.0.min.js"></script>


