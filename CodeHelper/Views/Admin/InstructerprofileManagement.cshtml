
@{
    ViewBag.Title = "InstructerprofileManagement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<style>
    .mt {
        margin-top: 45px !important;
        padding-top: 45px !important;
    }
</style>

<div class="header-two-title text-center mt" data-aos="fade-up">
    <p class="tagline">News & Events</p>
    <h2>Our Best Instructor</h2>
</div>

<div class="col-xl-12 col-lg-11 col-md-12 mx-auto">
    <div class="row">
        <div class="col-md-12">
            <div class="settings-widget">
                <div class="settings-inner-blk p-0">
                    
                    <div class="comman-space pb-0">
                        <div class="settings-tickets-blk course-instruct-blk table-responsive">

                            <table class="table table-nowrap mb-0 table-bordered text-center" id="myTable1">
                                <thead>
                                    <tr>
                                        <th>SR</th>
                                        <th>NAME</th>
                                        <th>Email</th>
                                        <th>Mobile</th>
                                        <th>Gender</th>
                                        <th>Picture</th>
                                        <th>Summary</th>
                                        <th>About</th>
                                        <th>Qualification</th>
                                        <th>ACTION</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.Rows.Count > 0)
                                        {
                                            int i = 1;
                                            foreach (System.Data.DataRow row in Model.Rows)
                                            {
                                                <tr>
                                                    <td>@i</td>
                                                    <td>@row["name"]</td>
                                                    <td>@row["email"]</td>
                                                    <td>@row["mobile"]</td>
                                                    <td>@row["gender"]</td>
                                                    <td><img src="~/Content/picture/@row["ipic"]" height="70px" width="70px" /></td>
                                                    <td>@row["summary"]</td>
                                                    <td>@row["about"]</td>
                                                    <td>@row["Btech"],@row["Mtech"],@row["BCA"],@row["MCA"],@row["Phd"]</td>
                                                    <td>
                                                        <a href="/admin/InstructerprofileManagement?sr=@row["sr"]" onclick="return confirm('Do you want to delete')"><button class="btn btn-danger fa fa-trash" title="Delete"></button></a>
                                                       <a href="/admin/UpdateInstructor?sr=@row["sr"]"onclick="return confirm('Do you want to Update data')"><button class="btn btn-success fa fa-pencil" title="Update"></button></a>
                                                    </td>
                                                </tr>
                                                { i = i + 1; }
                                            }
                                        }
                                    }
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Content/assets/js/jquery-3.6.0.min.js"></script>


