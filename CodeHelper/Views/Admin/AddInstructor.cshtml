
@{
    ViewBag.Title = "AddInstructor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .mt {
        margin-top:30px !important;
        padding-top:30px !important;
    }
    
</style>

<div class="row mt">
    <div class="col-sm-8 mx-auto mt">
        <h2>Add Instructor</h2>
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label class="add-course-label">Name</label>
                <input type="text" class="form-control" placeholder="Enter Name" name="name" />
            </div>
            <div class="form-group">
                <label class="add-course-label">Email Id</label>
                <input type="email" class="form-control" placeholder="Enter email" name="email" />
            </div>
            <div class="form-group">
                <label class="add-course-label">Mobile No</label>
                <input type="number" class="form-control" placeholder="Enter Mobile number" name="mobile" />
            </div>
            <div class="form-group">
                <label class="add-course-label">Gender</label><br />
                <input type="radio" name="gender" value="Male" class="custom-control-input"/> Male
                <input type="radio" name="gender" value="Female"/> Female
            </div>
            <div class="form-group">
                <label class="add-course-label">Profile picture</label>
                <input type="file" class="form-control" name="ipic" />
            </div>
            <div class="form-group">
                <label class="add-course-label">Profile Summary</label>
                <textarea name="summary" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <label class="add-course-label">About Me</label>
                <textarea name="about" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <label class="add-course-label">Highest qualification</label><br />
                <input type="checkbox" name="Btech" value="Btech" /> Btech
                <input type="checkbox" name="Mtech" value="Mtech" /> Mtech
                <input type="checkbox" name="BCA" value="BCA" /> BCA
                <input type="checkbox" name="MCA" value="MCA" /> MCA
                <input type="checkbox" name="Phd" value="Phd" /> Phd
            </div>
            <input type="submit" value="Submit" class="btn btn-info">
        </form>
    </div>
</div>

